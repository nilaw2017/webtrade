<%- include("../components/head.ejs") %>
<body>
  <%- include("../components/navBar") %>
  <form action="" method="POST" class="mt-5 container ps-5 pe-5">
    <div class="mb-2 d-grid grid-temp-col-3 w-50 m-auto login-container">
      <label for="company_name">Company Name:</label>
      <input
        class="col-span-2"
        type="text"
        name="company_name"
        id="company_name"
        placeholder="Company Name"
      />
    </div>
    <div class="mb-2 d-grid grid-temp-col-3 w-50 m-auto login-container">
      <label for="email">Email:</label>
      <input
        class="col-span-2"
        type="email"
        name="email"
        id="email"
        placeholder="Email"
      />
    </div>
    <div class="mb-2 d-grid grid-temp-col-3 w-50 m-auto login-container">
      <label for="password">Password:</label>
      <input
        class="col-span-2"
        type="password"
        name="password"
        id="password"
        placeholder="Password"
      />
    </div>
    <div class="d-flex justify-content-around">
      <button type="submit" value="Login" onclick="login()">Login</button>
    </div>
  </form>
</body>
<script>
  const login = ()=> {
    const company_name = company_name.value;
    const email = email.value;
    const password = password.value;

    return fetch("/login", {
      method: POST,
      body: {company_name, email, password}
    })
    .then(res=>console.log(res))
    .catch(err=>console.log(err))
  }
</script>
